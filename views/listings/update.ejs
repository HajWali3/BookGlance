<div class="row">
  <div class="col-8 offset-2">

    <body>
      <h3>Add Summary</h3>
      <form method="post" action="/listings/update/<%= chapter._id  %>?_method=PUT">
        <div class="row p-0">
          <div class="col-md-8">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" id="title" placeholder="Enter chapter title" class="form-control" />
          </div>

          <div class="col-md-4">
            <label for="chapter_number" class="form-label">Chapter Number</label>
            <input type="number" name="chapter_number" id="chapter_number" placeholder="Enter chapter no"
              class="form-control" />
          </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" id="description" placeholder="Enter description" class="form-control"></textarea>

          <div class="mb-3">
            <label for="summary" class="form-label">Summary</label>
            <textarea name="summary" id="summary" placeholder="Enter summary" class="form-control"></textarea>

            <button
              class="mt-3 px-4 py-2 border-none bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
              Add
            </button>

      </form>

    </body>
  </div>
</div>