<div class="row">
  <div class="col-8 offset-2">
    <body>
      <form method="post" action="/listings/new">
        <h3>Add a new Book</h3>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            placeholder="Add title of the book"
            class="form-control"
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            id="description"
            placeholder="Enter description"
            class="form-control"
          ></textarea>
        </div>

        <div class="row p-0">
          <div class="col-md-4">
            <label for="author" class="form-label">Author</label>
            <input
              type="text"
              name="author"
              id="author"
              placeholder="Author"
              class="form-control"
            />
          </div>

          <div class="col-md-8">
            <label for="genre" class="form-label">Genre</label>
            <input
              type="text"
              name="genre"
              id="genre"
              placeholder="Genre"
              class="form-control"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image Link</label>
          <input
            type="text"
            name="image"
            id="image"
            placeholder="Enter image url"
            class="form-control"
          />
        </div>

        <div class="mb-3">
          <label for="summary" class="form-label">Summary</label>
          <textarea
            name="summary"
            id="summary"
            placeholder="Enter summary"
            class="form-control"
          ></textarea>
        </div>

        <button
          class="px-4 py-2 border-none bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75"
        >
          Add
        </button>
        <br />
        <br />
      </form>
    </body>
  </div>
</div>
